<article class="post widget-post text-xs-center text-sm-left text-md-left">
	<a href="{full-link}">
		<div class="unit unit-horizontal unit-spacing-xs unit-middle">
			<div class="unit-body">
				<div class="post-meta"><span class="icon-xxs text-primary mdi mdi-arrow-right"></span>
					<time class="text-dark">{date}</time>
				</div>
				<div class="post-title">
					<h6 class="text-regular">{title}</h6>
				</div>
			</div>
		</div>
	</a>
</article>