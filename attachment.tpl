[allow-download]
<li class="wrap-info" style="height: 82px;">
	<div>
		<h5 class="title-item">Информация о файле:</h5>
		<div>
			<a href="{link}" title="{name}"><i class="fa fa-download" aria-hidden="true"></i> Скачать [{size}] (cкачиваний: {count})</a>
			[allow-online]<br><a href="{online-view-link}" target="_blank" title="{name}"><i class="fa fa-eye" aria-hidden="true"></i> Посмотреть файл онлайн</a>[/allow-online]
		</div>
	</div>
</li>
[/allow-download]
[not-allow-download]<span class="attachment">У вас нет доступа к скачиванию файлов с нашего сервера</span>[/not-allow-download]